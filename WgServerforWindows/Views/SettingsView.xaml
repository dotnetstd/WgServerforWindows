<UserControl x:Class="WgServerforWindows.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:properties="clr-namespace:WgServerforWindows.Properties"
             xmlns:controls="clr-namespace:WgServerforWindows.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <TextBlock Text="{x:Static properties:Resources.Settings}" Style="{StaticResource HeaderTextStyle}" Margin="0,0,0,20"/>

                <!-- Language Section -->
                <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="{x:Static properties:Resources.LanguageSelection}" FontWeight="Bold" Margin="0,0,0,10"/>
                        <ComboBox x:Name="LanguageComboBox" Width="200" HorizontalAlignment="Left" SelectionChanged="LanguageComboBox_SelectionChanged">
                            <ComboBoxItem Tag="en-US" Content="English"/>
                            <ComboBoxItem Tag="zh-CN" Content="中文 (简体)"/>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- Automation Section -->
                <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="{x:Static properties:Resources.Automation}" FontWeight="Bold" Margin="0,0,0,10"/>
                        <CheckBox Content="{x:Static properties:Resources.EnableDynamicIpSync}" 
                                  IsChecked="{Binding Settings.IsDynamicIpSyncEnabled}" 
                                  Margin="0,0,0,10"/>
                        <TextBlock Text="{x:Static properties:Resources.DynamicIpSyncDescription}" 
                                   FontStyle="Italic" FontSize="11" Opacity="0.7"/>
                    </StackPanel>
                </Border>

                <!-- Settings Prerequisite Items -->
                <ItemsControl ItemsSource="{Binding SettingsItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <controls:PrerequisiteItemControl/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>