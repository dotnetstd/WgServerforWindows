<Window x:Class="WgServerforWindows.Views.MtuWizardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WgServerforWindows.Views"
        xmlns:properties="clr-namespace:WgServerforWindows.Properties"
        mc:Ignorable="d"
        Title="{x:Static properties:Resources.MtuOptimizer}" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="{x:Static properties:Resources.MtuOptimizer}" Style="{StaticResource HeaderTextStyle}" Margin="0,0,0,10"/>
            <TextBlock Text="{x:Static properties:Resources.MtuDescription}" 
                       TextWrapping="Wrap" Margin="0,0,0,20" Foreground="{StaticResource TextSecondaryBrush}"/>

            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{x:Static properties:Resources.TargetHost}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Column="1" Text="{Binding TargetHost, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"/>
            </Grid>

            <Button Content="{x:Static properties:Resources.StartEstimation}" Command="{Binding StartEstimationCommand}" 
                    Style="{StaticResource ModernButtonStyle}" HorizontalAlignment="Left" Margin="0,0,0,20"
                    Visibility="{Binding IsBusy, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>

            <StackPanel Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar Value="{Binding Progress}" Height="20" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding StatusMessage}" HorizontalAlignment="Center"/>
            </StackPanel>

            <Border Visibility="{Binding IsCompleted, Converter={StaticResource BooleanToVisibilityConverter}}" 
                    Style="{StaticResource ModernCardStyle}" Margin="0,10,0,0">
                <StackPanel>
                    <TextBlock Text="{x:Static properties:Resources.EstimationComplete}" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding ResultMtu, StringFormat={x:Static properties:Resources.OptimalPhysicalMtu}}" FontSize="18" Foreground="{StaticResource PrimaryBrush}"/>
                    <TextBlock Text="{x:Static properties:Resources.MtuNote}" 
                               FontStyle="Italic" Margin="0,5,0,10" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="{x:Static properties:Resources.ApplyToConfiguration}" Command="{Binding ApplyMtuCommand}" Style="{StaticResource ModernButtonStyle}" Margin="0,0,10,0" Background="{StaticResource AccentBrush}"/>
                        <Button Content="{x:Static properties:Resources.Close}" Click="CloseButton_Click" Style="{StaticResource ModernButtonStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>