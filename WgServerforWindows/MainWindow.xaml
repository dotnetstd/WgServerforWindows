<Window x:Class="WgServerforWindows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:WgServerforWindows.Controls"
        xmlns:models="clr-namespace:WgServerforWindows.Models"
        xmlns:local="clr-namespace:WgServerforWindows"
        xmlns:properties="clr-namespace:WgServerforWindows.Properties"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type={x:Type models:MainWindowModel}}"
        Title="WS4W" Height="850" Width="1024"
        Icon="/Images/logo.ico"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Window.CommandBindings>
        <CommandBinding Command="{x:Static local:ShortcutCommands.AboutBoxCommand}" Executed="AboutBoxCommand_Executed"/>
        <CommandBinding Command="{x:Static local:ShortcutCommands.RefreshCommand}" Executed="RefreshCommand_Executed"/>
    </Window.CommandBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Bar -->
        <Border Grid.Row="0" Background="White" Padding="20,15" BorderThickness="0,0,0,1" BorderBrush="#EEEEEE">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/Images/logo.png" Height="32" Margin="0,0,15,0"/>
                    <TextBlock Text="WS4W" FontSize="20" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Settings Area -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{x:Static properties:Resources.LanguageSelection}" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <ComboBox x:Name="LanguageComboBox" Width="120" SelectionChanged="LanguageComboBox_SelectionChanged" SelectedIndex="0">
                        <ComboBoxItem Tag="en-US" Content="English"/>
                        <ComboBoxItem Tag="zh-CN" Content="中文 (简体)"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,10">
            <ItemsControl ItemsSource="{Binding PrerequisiteItems}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <controls:PrerequisiteItemControl/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>